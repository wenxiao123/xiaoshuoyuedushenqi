<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle" >
            <corners android:radius="30dp" />
            <gradient
                android:angle="270"
                android:endColor="#0FB6B1B1"
                android:startColor="#0F959292" />
        </shape>
    </item>

    <!-- 背景部分 -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度... -->
    <item
        android:left="4dp"
        android:top="0dp"
        android:right="4dp"
        android:bottom="8dp">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</layer-list>