<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bookshelf_multi_delete_bar_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/red">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/all_novel_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="意见反馈"
            android:textColor="@color/white"
            android:textSize="19sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="提交"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
    <!-- top -->
    <TextView
        android:id="@+id/tv_notice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="*请描述具体问题" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_search_search_bar"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:background="@color/white"
            android:gravity="top|left"
            android:hint="请输入昵称"
            android:minLines="5"
            android:maxLength="300"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:textCursorDrawable="@drawable/search_cursor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/iv_search_delete_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:padding="9dp"
            android:src="@drawable/search_delete_search_text"
            android:text="0/300" />
    </FrameLayout>
    <TextView
        android:id="@+id/tv_notice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="*您的联系方式" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_mobile_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="top|left"
            android:hint="请输入联系方式"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/search_cursor"
            android:textSize="15sp" />
    </FrameLayout>
    <TextView
        android:id="@+id/txt_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="在必要时我们将与你联系，方便坚决解决问题，我们将绝对保护你的隐私信息安全，联系方式只有专门工作人员可见"
        android:textColor="@color/gray"
        />
</LinearLayout>