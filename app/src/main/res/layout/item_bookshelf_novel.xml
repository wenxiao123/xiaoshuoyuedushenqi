<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="@dimen/item_bookshelf_novel_height"
    android:minHeight="@dimen/item_bookshelf_novel_height"
    android:padding="10dp">
<FrameLayout
    android:id="@+id/img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_item_bookshelf_novel_cover"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="fitXY" />
    <ImageView
        android:id="@+id/img_add"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:tint="@color/white"
        android:src="@mipmap/add"
        android:scaleType="fitXY" />
    <ImageView
        android:id="@+id/cb_item_bookshelf_novel_checked"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/select"
        android:visibility="gone"/>
</FrameLayout>
    <TextView
        android:id="@+id/tv_item_bookshelf_novel_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/item_novel_source_name"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:textColor="@color/item_bookshelf_novel_name_text"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@id/img" />

</RelativeLayout>