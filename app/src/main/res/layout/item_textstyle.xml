<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/selector_item_screen_text"
    android:padding="10dp">
    <TextView
        android:id="@+id/tv_item_screen_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_novel_screen_bar_height"
        android:minHeight="@dimen/all_novel_screen_bar_height"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:text="@string/item_screen_text"
        android:textSize="16sp"/>
    <ImageView
        android:id="@+id/img"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/yes"/>
</RelativeLayout>
