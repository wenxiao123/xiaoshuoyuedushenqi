<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_item_bookshelf_novel_cover1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_item_bookshelf_novel_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_novel_source_name"
        android:textSize="13sp"
        android:gravity="center_horizontal"
        android:textColor="@color/item_bookshelf_novel_name_text"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@id/iv_item_bookshelf_novel_cover1" />

</RelativeLayout>