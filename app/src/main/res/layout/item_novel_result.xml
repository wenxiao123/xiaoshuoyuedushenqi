<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <!-- cover -->
    <ImageView
        android:layout_marginLeft="@dimen/item_novel_source_text_margin_start"
        android:id="@+id/iv_item_novel_cover"
        android:layout_width="@dimen/img_cover_weigh"
        android:layout_height="@dimen/img_cover_height"
        android:scaleType="fitXY"
        android:src="@drawable/default_cover"
        android:layout_centerVertical="true" />
    <!-- name -->
    <TextView
        android:id="@+id/tv_item_novel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_novel_source_text_margin_start"
        android:layout_marginEnd="@dimen/item_novel_source_text_margin_end"
        android:text="@string/item_novel_source_name"
        android:textColor="@color/item_novel_source_name"
        android:textSize="18sp"
        android:textStyle="bold"
       android:layout_marginTop="18dp"
        android:layout_toEndOf="@id/iv_item_novel_cover"
        android:singleLine="true"
        android:ellipsize="end"/>


    <!-- author -->
    <TextView
        android:id="@+id/tv_item_novel_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_novel_source_text_margin_start"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:text="@string/item_novel_source_author"
        android:textColor="@color/text_color"
        android:textSize="12sp"
        android:layout_below="@id/tv_item_novel_title"
        android:layout_toEndOf="@id/iv_item_novel_cover"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_item_novel_cata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/item_novel_source_text_margin_end"
        android:text="@string/item_novel_source_author"
        android:textColor="@color/text_color"
        android:textSize="12sp"
        android:layout_below="@id/tv_item_novel_title"
        android:layout_toEndOf="@id/tv_item_novel_author"
        android:singleLine="true"
        android:ellipsize="end"/>

    <!-- introduce -->
    <TextView
        android:id="@+id/tv_item_novel_short_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_novel_source_text_margin_start"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/item_novel_source_text_margin_end"
        android:text="@string/item_novel_source_introduce"
        android:textColor="@color/item_novel_source_introduce"
        android:textSize="14sp"
        android:layout_below="@id/tv_item_novel_author"
        android:layout_toEndOf="@id/iv_item_novel_cover"
        android:maxLines="2"
        android:ellipsize="end"/>
    <TextView
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_item_novel_short_info"
        android:layout_toRightOf="@id/iv_item_novel_cover"
        android:id="@+id/tv_item_bookshelf"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="加入书架"
        android:background="@drawable/bachground_red"
        android:textColor="@color/yellow"
        android:textSize="14sp"
        android:maxEms="12"
        android:singleLine="true"
        android:ellipsize="end"/>
<View
    android:layout_below="@id/tv_item_bookshelf"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#DCDCDC"/>
</RelativeLayout>
