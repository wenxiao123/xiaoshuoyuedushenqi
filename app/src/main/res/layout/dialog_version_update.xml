<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/trans"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/group"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/update_coners_bg"
        android:paddingBottom="@dimen/dp_20"
        android:layout_height="360dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_130"
            android:scaleType="fitXY"
            android:src="@mipmap/popup_update_bg_golden"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/version_bg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="版本更新"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/dp_20"/>
        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            android:layout_marginTop="@dimen/dp_10"
            android:text="version update"
            android:textSize="@dimen/dp_17"
            android:textColor="@color/white"
            android:id="@+id/version_update"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/version_bg"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            android:id="@+id/content_title"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/dp_17"
            android:text="更新内容"
            android:textColor="@color/text_color"/>
            />
        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/content_title"
            app:layout_constraintBottom_toTopOf="@+id/update"
            android:id="@+id/content"
            android:gravity="start"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_color"
            android:layout_height="0dp"/>
        <Button
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:id="@+id/update"
            android:background="@drawable/login_btn_select"
            android:text="立即更新"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_17"
            android:layout_height="@dimen/dp_46"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:id="@+id/cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@+id/group"/>
</androidx.constraintlayout.widget.ConstraintLayout>