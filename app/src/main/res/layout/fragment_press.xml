<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/srv_press_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.tmall.ultraviewpager.UltraViewPager
                    android:id="@+id/ultra_viewpager4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@android:color/darker_gray"
                    app:upv_autoscroll="3000"
                    app:upv_infiniteloop="true" />

                <com.wzh.viewpager.indicator.UIndicator
                    android:id="@+id/indicator"
                    android:layout_width="40dp"
                    android:layout_height="6dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:circle_rect_corner="3dp"
                    app:circle_rect_itemHeight="4dp"
                    app:circle_rect_itemWidth="20dp"
                    app:circle_rect_radius="3dp"
                    app:normal_color="#ffffff"
                    app:selected_color="#DF6513"
                    app:spacing="10dp"
                    app:style="circle_rect" />
            </FrameLayout>

            <ImageView
                android:id="@+id/iv_male_hot_rank_title"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/banner"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/hot" />

            <TextView
                android:id="@+id/tv_male_hot_rank_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/banner"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_male_hot_rank_title"
                android:text="@string/male_hot_rank_title"
                android:textColor="@color/male_hot_rank_title"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_item_category_more"
                android:layout_width="15dp"
                android:layout_height="@dimen/item_category_second_height"
                android:layout_below="@id/banner"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="17dp"
                android:scaleType="centerInside"
                android:src="@drawable/item_category_more" />

            <TextView
                android:id="@+id/tv_item_category_more"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_category_second_height"
                android:layout_below="@id/banner"
                android:layout_toLeftOf="@id/iv_item_category_more"
                android:gravity="center"
                android:text="@string/more_top_text"
                android:textColor="@color/item_category_more"
                android:textSize="@dimen/item_category_more_size" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_male_hot_rank_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_male_hot_rank_title"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:overScrollMode="never" />

            <RelativeLayout
                android:id="@+id/click_more"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_male_hot_rank_recycler_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:background="@drawable/bachground_btn">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="超多火爆热书看不停 "
                    android:textColor="@color/red" />
                <ImageView
                    android:layout_toRightOf="@id/txt"
                    android:layout_width="20dp"
                    android:tint="@color/red"
                    android:layout_height="wrap_content"
                    android:src="@drawable/item_category_more"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_male_category_novel_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/click_more"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_male_hot_rank_recycler_view" />

            <ProgressBar
                android:id="@+id/pb_male"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="200dp"
                android:indeterminateTint="@color/progress_bar"
                android:visibility="gone" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.v4.widget.SwipeRefreshLayout>